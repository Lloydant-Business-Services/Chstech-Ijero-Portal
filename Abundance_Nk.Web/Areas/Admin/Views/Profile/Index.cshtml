    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        CHSTECH IJERO-EKITI
                    </a>
                </li>

                <div id="MainMenu">

                    @if (User.Identity.IsAuthenticated)
                    {
                        string role = Menu.GetUserRole(User.Identity.Name);
                        List<Abundance_Nk.Model.Model.Menu> menuList = Menu.GetMenuList(role).OrderBy(m => m.MenuGroup.Name).ToList();

                        if (menuList != null && menuList.Count > 0)
                        {
                            List<string> menuGroups = menuList.Select(m => m.MenuGroup.Name).Distinct().ToList();

                            for (int i = 0; i < menuGroups.Count; i++)
                            {
                                string currentMenuGroup = menuGroups[i];
                                List<Abundance_Nk.Model.Model.Menu> menuListForGroup = menuList.Where(m => m.MenuGroup.Name == currentMenuGroup).OrderBy(r => r.DisplayName).ToList();
                                string scriptId = "#demo" + (i).ToString();
                                string ulId = "demo" + (i).ToString();

                                <div class="list-group panel">

                                    <a href="@scriptId" class="list-group-item" data-toggle="collapse" data-parent="#MainMenu">@currentMenuGroup<i class="fa fa-caret-down"></i></a>
                                    <div class="collapse" id="@ulId">
                                        @foreach (Abundance_Nk.Model.Model.Menu currentMenu in menuListForGroup)
                                        {
                                            //var appRoot = System.Configuration.ConfigurationManager.AppSettings["AppRoot"].ToString();
                                           //var appRoot = "https://students.fedpolyado.edu.ng/";
                                           var appRoot = "http://localhost:2720/";
                                            var url = appRoot + currentMenu.Area + '/' + currentMenu.Controller + '/' + currentMenu.Action + '/';
                                            <a href="#" class="list-group-item" onclick="addTab( '@currentMenu.DisplayName' , '@url' )"> @currentMenu.DisplayName</a>
                                        }
                                    </div>

                                </div>
                            }
                        }
                    }

                </div>


               
