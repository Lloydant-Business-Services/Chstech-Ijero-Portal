                                                @Html.LabelFor(model => model.staffDetail.MobilePhone, new { @class = "control-label" })
                                                @Html.TextBoxFor(model => model.staffDetail.MobilePhone, new { @class = "form-control", @placeholder = "080XXXXXXXX" })
                                                @Html.ValidationMessageFor(model => model.staffDetail.MobilePhone, null, new { @class = "text-danger" })
                                            </div>
                                        </div><!-- form-group -->

                                        <div class="col-md-6">
