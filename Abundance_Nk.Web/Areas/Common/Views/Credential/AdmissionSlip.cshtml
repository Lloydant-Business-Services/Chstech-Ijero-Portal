@model Abundance_Nk.Model.Model.AdmissionLetter

@{
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/style.default.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-override.css" rel="stylesheet" />
<link href="~/Content/misc.css" rel="stylesheet" />

<br />

<div class="container">
    <div class="row">
        <div class=" col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="shadow">
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert" style="background-color: #2f422f!important; color: whitesmoke!important">
                            <div>
                                <table style="margin-bottom:7px">
                                   
                                    <tr style="color:whitesmoke!important">
                                        <td style="padding-right:7px"><img src="@Url.Content("~/Content/Images/chst.png")" alt="" width="50px" /></td>
                                        <td>
                                            <h4><strong>COLLEGE OF HEALTH AND SCIENCE TECHNOLOGY IJERO-EKITI</strong></h4>
                                            <p>
                                                P.M.B 7788 IJERO, Ekiti State, Nigeria
                                            </p>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="text-danger">
                            <h2>Admission Notification Slip</h2>
                        </div>

                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <td class="col-md-4"><b>Name</b></td>
                                    <td class="col-md-8">@Model.Person.FullName</td>
                                </tr>
                                <tr>
                                    <td class="col-md-4"><b>Programme</b></td>
                                    <td class="col-md-8">@Model.Programme.Name </td>
                                </tr>
                                <tr>
                                    <td class="col-md-4"><b>Department</b></td>
                                    <td class="col-md-8">@Model.Department.Name</td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <br />

                        <div>
                            Instructions on how to complete the admission process 
                            <div class="row">
                                <h5>
                                    <ol>
                                        <li><p>Confirm that you have met the departmental requirement.</p></li>
                                        <li><p>Generate an acceptance fee invoice.</p></li>
                                        <li><p>Proceed to the bank and make payment using the RRR number boldy written on the invoice. You can also make payment with your debit card.</p></li>
                                        <li><p>Return to the portal and input the RRR to print admission letter and acceptance receipt.</p></li>
                                        <li><p>Generate school fee invoice.</p></li>
                                        <li><p>Proceed to the bank and make payment using the RRR boldy written on the invoice. You can also make payment with your debit card.</p></li>
                                        <li><p>Return to the portal and input the RRR to print school fees receipt.</p></li>
                                        <li><p>Fill course registration form.</p></li>
                                        <li><p>Fill Student bio-data form.</p></li>

                                    </ol>
                                </h5>
                            </div>
                        </div>

                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

