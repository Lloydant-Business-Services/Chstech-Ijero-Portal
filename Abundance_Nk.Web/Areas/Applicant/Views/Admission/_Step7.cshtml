                        @Html.LabelFor(model => model.SchoolFeesInvoiceNumber)
                        @Html.TextBoxFor(model => model.SchoolFeesInvoiceNumber, new { @class = "form-control", @readonly = "readonly" })
                    </div>

                    <div class="form-group col-md-12 margin-bottom-0">
                        @Html.LabelFor(model => model.AcceptanceReceiptNumber)
                        @Html.TextBoxFor(model => model.AcceptanceReceiptNumber, new { @class = "form-control", @readonly = "readonly" })
                      
                    </div>

                    <div class="form-group col-md-12 margin-bottom-0">
                        @Html.LabelFor(model => model.SchoolFeesReceiptNumber)
                        @Html.TextBoxFor(model => model.SchoolFeesReceiptNumber, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                </div>

